Edit Rents Page

<%= form_for :rent, :method => :put do |f| %>

<p> Title: <%= f.text_field :title, placeholder: :title %></p>
<p> Description: <%= f.text_area :body %></p>
<p> Category: <%= f.text_field :category %></p>
<p> Price: <%= f.number_field :price %></p>
<p> Square Footage: <%= f.number_field :sqfootage %></p>
<p> Bed: <%= f.number_field :bed %></p>
<p> Bath: <%= f.number_field :bath %></p>
<%= f.hidden_field :user_id, :value => current_user.id%>
<%= f.submit "Save Rent" %>
<% end %>
