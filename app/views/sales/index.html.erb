<h2>Welcome to the sales index page</h2>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="row">
        <div class="row">
          <div class="col-md-5">
            <h2><%= link_to "Create Post", new_sale_path, class: "btn btn-primary" %></h2>
          </div>

          <div class="col-md-7">
            <% @sales.each do |sale| %>
              <h2><%= link_to sale.title, sale_path(sale) %></h2>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
