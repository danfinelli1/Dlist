        <%= link_to "Other", sales_path(:category=>"Other"), class: "btn btn-primary" %>
      </div>
      <div class="col-md-6 price-filters">
        <!-- Price Filters -->
      <%= link_to "$50", sales_path(:price=>"50"), class: "btn btn-primary" %>
      <%= link_to "$100", sales_path(:price=>"100"), class: "btn btn-primary" %>
      <%= link_to "$200", sales_path(:price=>"200"), class: "btn btn-primary" %>
